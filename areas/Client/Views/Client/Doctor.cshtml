@{
    Layout = "~/Views/Client/_Layout_Client.cshtml";
}
@using System.Data;
@model DataTable
<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
   <body> 
  
       
        <div class="row" style="margin: 50px;">
        @foreach (DataRow dr in Model.Rows)
        {
            <div class="col-md-4 mb-5">
            <div class="card" style="width: 22rem;">
              <div class="card-body">
                   <h2 class="card-title">@dr["DoctorName"]</h2>
                    <h5 class="card-title">@dr["PhoneNumber"]</h5>
                    <h5 class="card-title">@dr["Email"]</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@dr["Description"]</h6>
                    <p class="card-text">@dr["OfficeAddress"]</p>
                    <form method="post" asp-area="Client" asp-controller="Client" asp-action="PatientInsert">
                        <!--fisrt input tag int value will be pass-->
                        <input type="hidden" name="DiseaseID" value="@Convert.ToInt32(dr["DiseaseID"])" />
                        <input type="hidden" name="DoctorID" value="@Convert.ToInt32(dr["DoctorID"])" />

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModalCenter">
                            Assign me
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Patient Confirm</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to assign as Patient Of : @dr["DiseaseName"]  with DR.@dr["DoctorName"]
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Yes assign</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                 </div>
           </div>
           </div>
            }
        </div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>