@{
    ViewData["Title"] = "Doctor List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model DataTable

<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE TITLE-->
        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <span class="caption-subject font-red sbold uppercase">
                                Doctor List

                                @if (TempData["AlertMsg"] != null)
                                {
                                    <h3 class="alert text-success">@TempData["AlertMsg"]</h3>
                                }
                            </span>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="table-toolbar">
                            <div class="row">
                                <div class="col col-md-9">
                                    <a class="btn btn-success" asp-controller="US_Doctor" asp-action="Add">Add Doctor</a>
                                </div>
                                <br />
                                <div class="col col-md-3">
                                    <div id="sample_4_filter" class="dataTables_filter">
                                        <input type="search" id="myInput" class="form-control form-input border-dark input-medium  rounded-3" placeholder="Search Country..." aria-controls="sample_4">
                                    </div>
                                </div>

                            </div>
                            <br />
                            <table class="table table-striped table-hover table-bordered text-center" id="sample_editable_1">
                                <thead>
                                    <tr class="text-center">
                                        <th class="text-center"> No </th>
                                        <th class="text-center"> Doctor Name </th>
                                        <th class="text-center"> Description </th>
                                        <th class="text-center"> Email  </th>
                                        <th class="text-center"> Phonenumber </th>
                                        <th class="text-center"> OfficeAddress </th>
                                    </tr>
                                </thead>
                                <tbody id="myTable">
                                    @{
                                        int i = 1;

                                    }
                                    @foreach (DataRow dr in Model.Rows)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@dr["DoctorName"]</td>
                                            <td>@dr["Description"]</td>
                                            <td>@dr["Email"]</td>
                                            <td>@dr["PhoneNumber"]</td>
                                            <td>@dr["OfficeAddress"]</td>                     
                                            <td>
                                                <a asp-controller="US_Doctor" asp-action="Add" asp-area="US_Doctor" asp-route-DoctorID="@Convert.ToInt32(dr["DoctorID"])" class="btn btn-primary">Edit</a>
                                            </td>

                                            <td>
                                                <form method="post" asp-controller="US_Doctor" asp-action="Delete">
                                                    <!--fisrt input tag int value will be pass-->
                                                    <input type="hidden" name="DoctorID" value="@Convert.ToInt32(dr["DoctorID"])" />
                                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete : @dr["DoctorName"]')">Delete</button>

                                                </form>
                                            </td>
                                           
                                        </tr>
                                        i++;

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
        </div>
        <!-- END CONTENT BODY -->
    </div>
</div>
<!-- END CONTENT -->
<!-- END CONTENT -->